#!/bin/bash

# Sets the default access point settings on a fresh MyBot system
function setDefaultAccessPointSettings {
    
    # Set default channel
    if [[ $(awk -F '=' '/^channel=/ { print $2 }' /etc/hostapd/hostapd.conf) == '${channel}' ]]; then
        echo 'Channel still set to default'
        channel=$((1 + $RANDOM % 11))
        sudo sed -i 's|^channel=.*$|channel='"${channel}"'|g' /etc/hostapd/hostapd.conf
    fi

    # Set default ssid
    if [[ $(awk -F '=' '/^ssid=/ { print $2 }' /etc/hostapd/hostapd.conf) == '${ssid}' ]]; then
        echo 'SSID still set to default'
        ssid=RecruitAP_$(cat /sys/class/net/eth0/address | sed 's|:||g' | grep -o '.\{6\}$')
        sudo sed -i 's|^ssid=.*$|ssid='"${ssid}"'|g' /etc/hostapd/hostapd.conf
    fi

    # Set default passphrase
    if [[ $(awk -F '=' '/^wpa_passphrase=/ { print $2 }' /etc/hostapd/hostapd.conf) == '${wpa_passphrase}' ]]; then
        echo 'WPA Passphrase still set to default'
        wpa_passphrase=mrirecruit
        sudo sed -i 's|^wpa_passphrase=.*$|wpa_passphrase='"${wpa_passphrase}"'|g' /etc/hostapd/hostapd.conf
    fi

}

# Redundant stops to make sure services are not running
echo "Stopping network services (if running)..."
systemctl stop hostapd.service
systemctl stop dnsmasq.service
systemctl stop dhcpcd.service

# Make sure no uap0 interface exists (this generates an error; we could probably use an if statement to check if it exists first)
echo "Removing uap0 interface..."
iw dev uap0 del

# Add uap0 interface (this is dependent on the wireless interface being called wlan0, which it may not be in Stretch)
echo "Adding uap0 interface..."
iw dev wlan0 interface add uap0 type __ap

# Modify iptables (these can probably be saved using iptables-persistent if desired)
echo "IPV4 forwarding: setting..."
sysctl net.ipv4.ip_forward=1

echo "Editing IP tables..."
iptables -t nat -A POSTROUTING -s 192.168.50.0/24 ! -d 192.168.50.0/24 -j MASQUERADE
iptables -t nat -I PREROUTING --src 0/0 --dst 192.168.50.1 -p tcp --dport 80 -j REDIRECT --to-port 8080

# Bring up uap0 interface. Commented out line may be a possible alternative to using dhcpcd.conf to set up the IP address.
# ifconfig uap0 192.168.50.1 netmask 255.255.255.0 broadcast 192.168.50.255
# Switched to ip tool since ifconfig is deprecated
# ifconfig uap0 up
ip link set uap0 up

# Setting robot specific hostapd settings
setDefaultAccessPointSettings

# Start hostapd. 10-second sleep avoids some race condition, apparently. It may not need to be that long. (?) 
echo "Starting hostapd service..."
systemctl start hostapd.service
sleep 10

# Start dhcpcd. Again, a 5-second sleep
echo "Starting dhcpcd service..."
systemctl start dhcpcd.service
sleep 5

# Start dnsmasq
echo "Starting dnsmasq service..."
systemctl start dnsmasq.service
echo "Ap-STA mode STARTED"